generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  priority    String
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Using String for priority in local SQLite demo. Allowed values: LOW, MEDIUM, HIGH, CRITICAL
